            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #ffffff;
            position: relative;
            padding: 20px;
        }

        .hero-text h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            background: linear-gradient(to right, #FF6801, #FFB677, #FF6801);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInDown 1.5s ease-in-out;
        }

        .hero-text p {
            font-size: 1.2rem;
            margin-top: 20px;
            color: #f0f0f0;
        }

        .btn-primary {
            background-color: #FF6801;
            border: none;
            transition: transform 0.3s ease-in-out;
            font-weight: 600;
        }

        .btn-primary:hover {
            transform: scale(1.1);
            background-color: #e55c00;
        }

        /* About Section */
        .about-section {
            padding: 80px 0;
            background-color: #f7f7f7;
        }

        .about-img {
            transition: all 0.6s ease-in-out;
        }
        .about-img:hover {
            transform: scale(1.05) rotate(-2deg);
        }

        /* Services Section */
        .service-card {
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            transition: all 0.4s ease-in-out;
            padding: 20px;
        }
        .service-card h5{
            font-weight: bold;
        }
        .service-card p{
            text-align: justify;
        }

