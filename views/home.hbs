            transform: translateY(-10px);
            background-color: #FF6801;
            color: #fff;
        }

        .service-card i {
            font-size: 3rem;
            margin-bottom: 20px;
            color: #045B2E;
            transition: color 0.4s ease-in-out;
        }

        .service-card:hover i {
